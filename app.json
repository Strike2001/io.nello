{
  "id": "io.nello",
  "version": "1.1.0",
  "compatibility": ">=2.0.0",
  "brandColor": "#00E590",
  "sdk": 2,
  "name": {
    "en": "nello"
  },
  "description": {
    "en": "Adds support for nello"
  },
  "category": [
    "security"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Athom B.V.",
    "email": "support@athom.com"
  },
  "flow": {
    "triggers": [
      {
        "id": "webhook_swipe",
        "title": {
          "en": "Unlocked in the nello app"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=nello"
          }
        ]
      },
      {
        "id": "webhook_geo",
        "title": {
          "en": "Unlocked because closeby"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=nello"
          }
        ]
      },
      {
        "id": "webhook_tw",
        "title": {
          "en": "Unlocked because of time window"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=nello"
          }
        ]
      },
      {
        "id": "webhook_deny",
        "title": {
          "en": "Doorbell rang but not unlocked"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=nello"
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "nello",
      "name": {
        "en": "nello one"
      },
      "class": "lock",
      "capabilities": [
        "locked"
      ],
      "images": {
        "large": "/drivers/nello/assets/images/large.png",
        "small": "/drivers/nello/assets/images/small.png"
      },
      "pair": [
        {
          "id": "login_oauth2",
          "template": "login_oauth2"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ]
}